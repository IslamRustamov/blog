<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


    <section class="hero is-primary is-medium is-bold">
	  <!-- Hero head: will stick at the top -->
	  <div class="hero-head">
	    <nav class="navbar">
	      <div class="container">
	        <div class="navbar-brand">
	          <%= link_to 'Blog of Islam The Greatest', root_path, class: "navbar-item" %>
	          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
	            <span></span>
	            <span></span>
	            <span></span>
	          </span>
	        </div>
          <% if current_admin %>
          <div id="navbarMenuHeroA" class="navbar-menu">
	          <div class="navbar-end">
              <%= link_to "Create New Post", new_post_path, class:"navbar-item" %>
              <%= link_to 'Sign out', destroy_admin_session_path, method: :delete %>
	          </div>
	        </div>
          <% else %>
          <div id="navbarMenuHeroA" class="navbar-menu">
	          <div class="navbar-end">
              <%= link_to 'Sign in', new_admin_session_path %>
	          </div>
	        </div>
          <% end %>

          <div id="navbarMenuHeroC" class="navbar-menu">
          <div class="navbar-end">
            <a class="navbar-item" href="https://github.com/IslamRustamov">
              My Github
            </a>
            <a class="navbar-item" href="https://vk.com/id272423496">
              My VK
            </a>
          </div>
        </div>

	      </div>
	    </nav>
	  </div>

	  <!-- Hero content: will be in the middle -->
	  <div class="hero-body">
	    <div class="container has-text-centered">
	      <h1 class="title">
	        <%= yield :page_title %>
	      </h1>
	    </div>
	  </div>
</section>
    <%= yield %>
  </body>
</html>
